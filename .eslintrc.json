{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
  }
  },
  "ignorePatterns": ["build/"],
  "rules": {
    "linebreak-style": 0,
    "no-param-reassign": [2, { "props": false }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          ".storybook/**",
          "!*.stories.js"
        ]
      }
    ]
  }
}